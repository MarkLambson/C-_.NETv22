@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <title>Dojo Survey</title>
</head>
<body class="bg-dark text-light">
    <main class="mt-5 border border-light p-3 mx-auto w-50">

@* form here *@
        <form action="survey" method="post">

            <div class="d-flex justify-content-between mb-3">
                <label for="Name" class="text-info text-decoration-underline fw-bold">Your Name:</label>
                <input type="text" name="Name" class="form-control w-50">
            </div>

            <div class="d-flex justify-content-between mb-3">
                <label for="Location" class="text-success text-decoration-underline fw-bold">Dojo Location:</label>
                <select name="Location" class="form-control w-50" id="location">
                    <option value="San Jose">San Jose</option>
                    <option value="Burbank">Burbank</option>
                    <option value="New York">New York</option>
                    <option value="Washington">Washington</option>
                    <option value="Arizona">Arizona</option>
                    <option value="Hawaii">Hawaii</option>
                </select>
            </div>

            <div class="d-flex justify-content-between mb-3">
                <label for="Language" class="text-warning text-decoration-underline fw-bold">Favorite Language:</label>
                <select name="Language" class="form-control w-50" id="location">
                    <option value="Python">Python</option>
                    <option value="C#">C#</option>
                    <option value="Javascript">Javascript</option>
                    <option value="Java">Java</option>
                </select>
            </div>
            <div class="d-flex justify-content-between mb-3">
                <label for="Comment" class="text-danger text-decoration-underline fw-bold">Comment (optional):</label>
                <textarea name="Comment" class="form-control w-50 mb-3"></textarea>
            </div>

            <div class="d-flex flex-row-reverse">
                <button class="btn btn-primary" type="submit">Submit</button>
            </div>

        </form>
@* end form  *@

    </main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</body>
</html>